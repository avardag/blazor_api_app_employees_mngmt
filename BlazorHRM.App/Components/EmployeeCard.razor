@using BlazorHRM.Shared.Domain
<h3>EmployeeCard</h3>
<div class="col">
    <div class="card rounded-3 employee-card" style="width: 18rem;">
        <div class="card-header py-3">
            <h4>@Employee.FirstName @Employee.LastName</h4>
        </div>
        <div class="card-body employee-card text-center">
            <div class="mb-3">
                <img src="@($"images/{Employee.FirstName.ToLower()}_profile.jpg")" class="employee-img rounded-circle"/>
                @* <img src="@($"/images/{Employee.FirstName.ToLower()}_profile.jpg")}" class="employee-img"/> *@
                </div>
        </div>
    </div> 
</div>

@code {
    [Parameter]
    public Employee Employee { get; set; } = default!;
}